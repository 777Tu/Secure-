
def xor_encrypt(or_txt, pas_w):
    en_pted = (pas_w * (len(or_txt)//len(pas_w) +1))[:len(or_txt)]
    
    return bytes([as_t ^ as_p for as_t,as_p in zip(or_txt, en_pted)])
    
  

text = b"Hello world"
key = b"one-key"
locked = xor_encrypt(text, key)
print("text locked:::", locked)

unlock = xor_encrypt(locked, key)
print("text unlocked:::",unlock.decode())

